{% extends 'Site/base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">DÃ©connexion</a>
        </div>
    {% endif %}

    <div class="container-fluid py-5">
        <div class="container py-5">
            <div class="text-center mb-5">
             
                <h1>Connexion</h1>
            </div>
            <div class="row justify-content-center">
                <div class="col-lg-8">
                    <div class="contact-form bg-secondary rounded p-5">
                        <div id="success"></div>
                        <form name="sentMessage" id="contactForm" novalidate="novalidate">
                            <div class="control-group">
                                <input type="email" value="{{ last_username }}" placeholder="Email" name="email" id="inputEmail" class="form-control border-0 p-4" autocomplete="email" required autofocus>
                                <p class="help-block text-danger"></p>
                            </div>
                            <div class="control-group">
                                 <input type="password" name="password"  placeholder="Mot de passe" id="inputPassword" class="form-control border-0 p-4" autocomplete="current-password" required>
                                 <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                                <p class="help-block text-danger"></p>
                            </div>
                             <div class="checkbox mb-3">
                                <label>
                                    <input type="checkbox" name="_remember_me"> Rester connecter
                                </label>
                            </div>
                            <div class="text-center">
                                <button class="btn btn-primary py-3 px-5" type="submit" id="sendMessageButton">Connexion</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>


    
   

   
{% endblock %}
