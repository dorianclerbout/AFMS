
{% extends 'Admin/base.html.twig' %}

{% block title %}Administration AFMS{% endblock %}

{% block body %}
  <div class="right_col" role="main">
  <div class="">
    <div class="clearfix"></div>
    <div class="row">
      <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
          <div class="x_title">
            <h1>Ajouter une formation</h1>
            <div class="clearfix"></div>
          </div>
          <div class="x_content">
            <br />
            {{ form_start(form, {'attr': {'class': 'form-horizontal form-label-left', 'data-parsley-validate': true}}) }}
            <div class="form-group">
              <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">Catégorie de la Formation<span class="required">*</span></label>
              <div class="col-md-6 col-sm-6 col-xs-12">
                {{ form_widget(form.categorie) }}
              </div>
            </div>
            <div class="form-group">
              <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">Nom de la Formation<span class="required">*</span></label>
              <div class="col-md-6 col-sm-6 col-xs-12">
                {{ form_widget(form.name) }}
              </div>    
            </div>
            <div class="form-group">
              <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">Durée de la Formation<span class="required">*</span></label>
              <div class="col-sm-6 col-sm-6 col-xs-12">
                {{ form_widget(form.time, {'attr': {'placeholder': 'Heures'}}) }}
              </div>
            </div>
            <div class="form-group">
              <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">Participant<span class="required">*</span></label>
              <div class="col-md-6 col-sm-6 col-xs-12">
                {{ form_widget(form.people, {'attr': {'placeholder': 'Nombre de participants'}}) }}
              </div>
            </div>
            <div class="form-group">
              <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">Description de la Formation<span class="required">*</span></label>
              <div class="col-md-6 col-sm-6 col-xs-12">
                {{ form_widget(form.description, {'attr': {'placeholder': 'Description'}}) }}
              </div>
            </div>
            <div class="form-group">
              <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">Image<span class="required">*</span></label>
              <div class="col-md-6 col-sm-6 col-xs-12">
                {{ form_widget(form.image, {'attr': {'onchange': 'previewImage(this)'}}) }}
                <img id="imagePreview" src="#" alt="Preview" style="max-width: 200px; max-height: 200px; display: none;"/>
              </div>
            </div>
  <div class="form-group">
    <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
      <button type="submit" class="btn btn-success">{{ button_label|default('Save') }}</button>
    </div>
  </div>
  {{ form_end(form) }}
          
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  function previewImage(input) {
    var reader = new FileReader();
    reader.onload = function(e) {
      var imagePreview = document.getElementById('imagePreview');
      imagePreview.src = e.target.result;
      imagePreview.style.display = 'block'; 
    }
    reader.readAsDataURL(input.files[0]);
  }
</script>

    
{% endblock %}
